{
  // ============================================================
  // BAR SETTINGS
  // ============================================================
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 32,
  "width": 1280,
  "margin": "0px 6px 0 6",

  // ============================================================
  // MODULE LAYOUT
  // ============================================================
  "modules-left": [
    "custom/omarchy",
    "cpu",
    "memory",
    "mpris"
  ],
  "modules-center": [
    "custom/cava",
    "custom/weather",
    "clock",
    "custom/updatespacman"
  ],
  "modules-right": [
    "group/tray-expander",
    "network",
    "bluetooth",
    "pulseaudio",
    "battery",
    "custom/exit"
  ],

  // ============================================================
  // MODULES ‚Äî LEFT
  // ============================================================

"custom/cava": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/cava.py",
    "return-type": "json"
},

"custom/omarchy": {
    "format": "<span font='omarchy'>\ue900</span>",
    "on-click": "omarchy-menu",
    "on-click-right": "xdg-terminal-exec",
    "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space"
  },

  "cpu": {
    "interval": 5,
    "format": "{usage}% Û∞çõ",
    "on-click": "timeout 20s omarchy-launch-floating-terminal-with-presentation btop",
    "states": { "critical": 80 }
  },

  "memory": {
    "interval": 2,
    "format": "{used} GiB",
    "format-alt": "{used} / {total} GiB",
    "tooltip": false,
    "states": { "critical": 85 }
  },

"mpris": {
    "format": "{player_icon} {title}",
    "format-paused": "{status_icon} {title}",
    "tooltip": false,
    "max-length": 35,
    "interval": 1,
    "player-icons": {
      "chrome": "ÔÖ™",
      "brave": "ÔÖ™",
      "brave-browser": "ÔÖ™",
      "chromium": "ÔÖ™",
      "chromium-browser": "ÔÖ™",
      "spotify": "ÔÜº",
      "firefox": "Ôâ©",
      "mpv": "ÔÄΩ",
      "default": "Ôéπ"
    },
    "status-icons": {
      "paused": "ÔÅå", 
      "playing": "ÔÅã", 
      "default": "ÔÅã"
    },
   
    "on-click": "playerctl play-pause",
    //"on-click-right": "playerctl next",
    //"on-click-middle": "playerctl previous",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous"

    //"tooltip-format": "<b>{title}</b>\n<i>{artist}</i>\n{album}"
},


  // ============================================================
  // MODULES ‚Äî CENTER
  // ============================================================

  "custom/weather": {
    "format": "{}¬∞",
    "tooltip": true,
    "interval": 60,
    "exec": "wttrbar",
    "return-type": "json"
  },

  "clock": {
    "format": "{:L%A %H:%M %p}",
    "format-alt": "{:%d %B %Y}",
    "tooltip-format": "<span>{calendar}</span>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-click-right": "mode",
      "format": {
        "mouth": "<span color='#ffead3'><b>{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b>{}</b></span>"
      }
    },
    "on-click-right": "~/.local/share/omarchy/bin/omarchy-cmd-tzupdate"
  },

  "custom/updatespacman": {
    "format": "{} {icon}",
    "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
    "return-type": "json",
    "format-icons": { "has-updates": "üëπ", "updated": "ÔåÆ " },
    "exec-if": "which waybar-module-pacman-updates",
    "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
  },

  // ============================================================
  // MODULES ‚Äî RIGHT
  // ============================================================

  "group/tray-expander": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 600,
      "children-class": "tray-group-item"
    },
    "modules": [
      "custom/expand-icon",
      "temperature",
      "backlight"
      //"custom/recorder"
    ]
  },

  "custom/expand-icon": {
    "format": "{} ",
    "format-icons": {
      "expanded": "‚ñΩ ",
      "collapsed": "‚ñ∑ "
    },
    "tooltip": false
  },

  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon6/temp1_input",
    "format": "{temperatureC}¬∞ Ôãâ",
    "critical-threshold": 75,
    "format-critical": "Ôãá {temperatureC}¬∞C",
    "format-icons": ["Ôãã", "Ôãä", "Ôãâ", "Ôãà", "Ôãá"],
    "tooltip": false,
    "interval": 5,
    "states": { "critical": 75 }
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["üåë", "üåí", "üåì", "üåî", "üåï"],
    "min-length": 5,
    "tooltip": false
  },

  "custom/recorder": {
    "exec": "~/.config/waybar/scripts/record-status.sh",
    "interval": 1,
    "on-click": "~/.config/waybar/scripts/toggle-record.sh",
    "return-type": "json"
  },

  "network": {
    "format": "{icon}",
    "format-wifi": "Ôá´  {signalStrength}% | {bandwidthTotalBits}",
    "format-ethernet": "{ifname} Û∞ÄÇ",
    "format-disconnected": "Û∞ñ™",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)",
    "tooltip-format-ethernet": "‚á£{bandwidthDownBytes}  ‚á°{bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "interval": 3,
    "nospacing": 1,
    "on-click": "timeout 5s omarchy-launch-wifi"
  },

  "bluetooth": {
    "format": "Ôäì",
    "format-disabled": "Û∞Ç≤",
    "format-off": "Û∞Ç≤",
    "format-connected": "Ôäì",
    "tooltip-format-connected": "{device_enumerate}",
    "tooltip-format-enumerate-connected-battery": "{device_alias} {device_battery_percentage}%",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "on-click": "timeout 10s omarchy-launch-floating-terminal-with-presentation bluetui"
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "on-click": "timeout 15s omarchy-launch-or-focus-tui wiremix",
    "on-click-right": "pamixer -t",
    "tooltip": false,
    "scroll-step": 5,
    "format-muted": "Mute üö´",
    "format-icons": {
      "headphone": "Û∞ãã",
      "hands-free": "Û∞ãå",
      "headset": "Û∞ãé",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    }
  },

  "battery": {
    "format": "{capacity}% {icon}",
    "format-discharging": "{icon} {capacity}",
    "format-charging": "{icon} {capacity}%",
    "format-plugged": "Ôá¶ {capacity}",
    "format-alt": "{time} {icon}",
    "format-icons": {
      "charging": ["Û∞¢ú", "Û∞ÇÜ", "Û∞Çá", "Û∞Çà", "Û∞¢ù", "Û∞Çâ", "Û∞¢û", "Û∞Çä", "Û∞Çã", "Û∞ÇÖ"],
      "default": ["Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },
    "format-full": "Û∞ÇÖ",
    "tooltip-format-discharging": "empty in {time}",
    "tooltip-format-charging": "full charge in {time} {power:>1.0f}W ‚Üë",
    "interval": 5,
    "states": { "warning": 30, "critical": 20 }
  },

  "custom/exit": {
    "format": " ÔÄë ",
    "tooltip-format": "System menu (Super + Esc)",
    "on-click": "GSK_RENDERER=ngl omarchy-menu system"
  },

